<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="请填写您的信息"
            android:textSize="30sp" />

        <EditText

            android:id="@+id/stuNo"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_weight="1"
            android:background="@drawable/edit_selector"
            android:hint="学号"
            android:textCursorDrawable="@null" />

        <EditText

            android:id="@+id/stuName"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_weight="1"
            android:background="@drawable/edit_selector"
            android:hint="姓名"
            android:textCursorDrawable="@null" />

        <EditText

            android:id="@+id/stuPwd"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_weight="1"
            android:background="@drawable/edit_selector"
            android:drawableRight="@drawable/biyan"
            android:hint="密码"
            android:inputType="textPassword"
            android:textCursorDrawable="@null" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/stuPwd_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_weight="1"
                android:background="@drawable/edit_selector"
                android:drawableRight="@drawable/biyan"
                android:hint="再次确认密码"
                android:inputType="textPassword"
                android:textCursorDrawable="@null" />

        </FrameLayout>


        <!--   <EditText

            android:id="@+id/stuSex"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_weight="1"
            android:background="@drawable/edit_selector"
            android:hint="性别"
            android:textCursorDrawable="@null" />-->


        <EditText

            android:id="@+id/stuWei"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_weight="1"
            android:background="@drawable/edit_selector"
            android:hint="体重(KG)"
            android:textCursorDrawable="@null" />

        <EditText

            android:id="@+id/stuHei"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_weight="1"
            android:background="@drawable/edit_selector"
            android:hint="身高(CM)"
            android:textCursorDrawable="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/dateDisplay"
                android:layout_width="300dp"
                android:layout_height="59dp"
                android:layout_marginLeft="35dp"
                android:layout_weight="1"
                android:background="@drawable/edit_selector"
                android:enabled="false"
                android:hint="出生年月"
                android:textCursorDrawable="@null" />


            <Button

                android:id="@+id/dateChoose"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="35dp"
                android:layout_weight="1"
                android:background="@drawable/btn2"
                android:bottom="2dp"
                android:text="选择日期"
                android:textColor="#FA0A0A0A"
                android:textSize="18sp" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="35dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text3"
                android:layout_width="113dp"
                android:layout_height="40dp"
                android:text="选择性别"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radioMen"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:buttonTint="#03A9F4"
                android:checked="true"
                android:text="男"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radioWomen"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:buttonTint="#03A9F4"
                android:text="女"
                android:textSize="18sp" />
        </RadioGroup>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/msg"
                android:layout_width="218dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="35dp"
                android:background="@drawable/edit_selector"
                android:hint="请填写您收到的验证码" />

            <Button
                android:id="@+id/getmsg"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:layout_gravity="right"
                android:layout_marginTop="23dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/btn2"
                android:text="获取验证码"
                android:textSize="18sp" />
        </FrameLayout>

        <Button
            android:id="@+id/stuReg"
            android:layout_width="342dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/ee"
            android:text="注册"
            android:textColor="#FCFFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="84dp" />

    </LinearLayout>
</LinearLayout>
